{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "description": "A WhatsApp bot with plugin-based command system and social media downloaders",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "admin": "node admin/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "update-ytdl": "npm install ytdl-core@latest",
    "setup-ytdl": "pip install pytube && npm run install-ytdlp",
    "install-all": "npm install && npm update"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "baileys"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "baileys": "^6.7.16",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "file-type": "^1.2.0",
    "fs-extra": "^11.3.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode-terminal": "^1.0.1",
    "multer": "^1.4.5-lts.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}